{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "windows-mqtt",
  "version": "0.0.1",
  "identifier": "pro.popstas.windows-mqtt",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "node -e \"var fs=require('fs');fs.mkdirSync('frontend',{recursive:true});fs.copyFileSync('index.html','frontend/index.html')\"",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../frontend"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/icon.ico",
      "../assets/trayicon.png"
    ],
    "resources": [
      "../data/**",
      "../config.yml",
      "../config.example.yml",
      "../commands.example.yml",
      "../src/*",
      "../src/**/*"
    ],
    "windows": {
      "wix": {
        "enableElevatedUpdateTask": false
      }
    }
  },
  "app": {
    "trayIcon": {
      "iconPath": "../assets/trayicon.png",
      "iconAsTemplate": false
    },
    "windows": [
      {
        "label": "main",
        "title": "windows-mqtt",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": false
      }
    ]
  }
}
